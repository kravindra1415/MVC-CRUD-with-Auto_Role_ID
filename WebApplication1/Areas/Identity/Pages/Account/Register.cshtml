@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h2>Create a new account.</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Input.Email"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.Password"></label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.ConfirmPassword"></label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>

             <div class="btn-group m-lg-2">
                <label asp-for="Input.Role"></label>&nbsp; 
                <input type="radio" id="RoleUser" asp-for="Input.Role" class="form-check-input" aria-required="true" value="User" checked />&nbsp;
                <label for="RoleUser">User</label>&nbsp;
                <input type="radio" id="RoleAdmin" asp-for="Input.Role" class="form-check-input" aria-required="true" value="Admin"/>&nbsp;
                <label for="RoleAdmin">Admin</label>&nbsp;
                <input type="radio" id="RoleSuperAdmin" asp-for="Input.Role" class="form-check-input" aria-required="true" value="SuperAdmin"/>&nbsp;
                <label for="RoleSuperAdmin">SuperAdmin</label>
                <span asp-validation-for="Input.Role" class="text-danger"></span>
            </div>

            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
        </form>
    </div>
    <div class="col-md-6 col-md-offset-2">
       
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
